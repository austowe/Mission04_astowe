@{
    ViewData["Title"] = "Calculator";
}

@model CalculatorModel;
    

    <h2>Grade Calculator</h2>
    <!--Form for calculator-->
    <form method="post">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-3" id="calc">
                <br />
                <label>Assignments: </label>
                <input type="number" step="1" placeholder="%" required min="0" max="100" id="assignments" asp-for="assignments"/>
                <br />
                <label>Group Project: </label>
                <input type="number" step="1" placeholder="%" required min="0" max="100" id="project" asp-for="project"/>
                <br />
                <label>Quizzes: </label>
                <input type="number" step="1" placeholder="%" required min="0" max="100" id="quiz" asp-for="quiz"/>
                <br />
                <label>Midterm Exam: </label>
                <input type="number" step="1" placeholder="%" required min="0" max="100" id="midterm" asp-for="midterm"/>
                <br />
                <label>Final Exam: </label>
                <input type="number" step="1" placeholder="%" required min="0" max="100" id="final" asp-for="final"/>
                <br />
                <label>INTEX: </label>
                <input type="number" step="1" placeholder="%" required min="0" max="100" id="intex" asp-for="intex"/>
                <br /><br />
                <button id="calcButton" type="submit">Calculate</button>
                <div asp-validation-summary="All"></div>
            </div>
            <div class="col-md-5">
                <h4>Calculated grade: </h4>
                <span id="output"></span>
            </div>
            <div class="col-md-2"></div>
        </div>
    </form>
